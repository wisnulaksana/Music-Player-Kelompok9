<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kelompok9.musicplayer.Activity.FavouriteActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_height="280dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_favourite"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="#2196F3"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:layout_height="match_parent">

            <ImageView

                android:id="@+id/favourite_content_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                android:src="@drawable/album_art"
                app:layout_collapseParallaxMultiplier="0.7"
                android:scaleType="centerCrop"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_favourite"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:animationCache="true"
                app:layout_collapseMode="pin"
                app:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
                app:titleTextColor="@android:color/white">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>



    </com.google.android.material.appbar.AppBarLayout>




    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/activity_favourite_all_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_play_circle_filled_black_24dp"
                android:backgroundTint="#2196F3" />

            <TextView
                android:id="@+id/song_play_all2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play all"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/favourite_activity_songs_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray"/>

        <ListView
            android:id="@+id/list_favourite_contents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawSelectorOnTop="true"
            android:scrollbars="none"
            android:dividerHeight="0dp"
            android:focusableInTouchMode="true"
            android:smoothScrollbar="true"

            />


    </LinearLayout>






    <include
        android:id="@+id/favourite_bottom_now_playing"
        layout="@layout/bottom_now_playing"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:visibility="gone"

        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>